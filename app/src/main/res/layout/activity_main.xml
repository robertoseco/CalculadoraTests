<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/B1"
        android:layout_width="83dp"
        android:layout_height="147dp"
        android:layout_marginStart="15dp"
        android:text="1"
        android:textSize="60dp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.239" />

    <Button
        android:id="@+id/B2"
        android:layout_width="83dp"
        android:layout_height="147dp"
        android:layout_marginStart="15dp"
        android:text="2"
        android:textSize="60dp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/B1"
        app:layout_constraintTop_toTopOf="@+id/B1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/B3"
        android:layout_width="83dp"
        android:layout_height="147dp"
        android:layout_marginStart="15dp"
        android:text="3"
        android:textSize="60dp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/B2"
        app:layout_constraintTop_toTopOf="@+id/B2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Bmas"
        android:layout_width="83dp"
        android:layout_height="147dp"
        android:layout_marginStart="15dp"
        android:text="+"
        android:textSize="60dp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/B3"
        app:layout_constraintTop_toTopOf="@+id/B3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Bmenos"
        android:layout_width="83dp"
        android:layout_height="147dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="-"
        android:textSize="60dp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Bmas"
        app:layout_constraintTop_toBottomOf="@+id/Bmas"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/B4"
        android:layout_width="83dp"
        android:layout_height="147dp"
        android:layout_marginEnd="15dp"
        android:text="4"
        android:textSize="60dp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toStartOf="@+id/Bmenos"
        app:layout_constraintTop_toTopOf="@+id/Bmenos" />

    <Button
        android:id="@+id/B5"
        android:layout_width="83dp"
        android:layout_height="147dp"
        android:layout_marginEnd="15dp"
        android:text="5"
        android:textSize="60dp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toStartOf="@+id/B4"
        app:layout_constraintTop_toTopOf="@+id/B4" />

    <Button
        android:id="@+id/B6"
        android:layout_width="83dp"
        android:layout_height="147dp"
        android:layout_marginEnd="15dp"
        android:text="6"
        android:textSize="60dp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toStartOf="@+id/B5"
        app:layout_constraintTop_toTopOf="@+id/B5" />

    <Button
        android:id="@+id/B7"
        android:layout_width="83dp"
        android:layout_height="147dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:text="7"
        android:textSize="60dp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B6" />

    <Button
        android:id="@+id/B8"
        android:layout_width="83dp"
        android:layout_height="147dp"
        android:layout_marginStart="15dp"
        android:text="8"
        android:textSize="60dp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/B7"
        app:layout_constraintTop_toTopOf="@+id/B7" />

    <Button
        android:id="@+id/B9"
        android:layout_width="83dp"
        android:layout_height="147dp"
        android:layout_marginStart="15dp"
        android:text="9"
        android:textSize="60dp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/B8"
        app:layout_constraintTop_toTopOf="@+id/B8" />

    <Button
        android:id="@+id/Bigual"
        android:layout_width="83dp"
        android:layout_height="147dp"
        android:layout_marginStart="15dp"
        android:text="="
        android:textSize="60dp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/B9"
        app:layout_constraintTop_toTopOf="@+id/B9" />

    <Button
        android:id="@+id/B0"
        android:layout_width="279dp"
        android:layout_height="78dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:text="0"
        android:textSize="40dp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/B8" />

    <Button
        android:id="@+id/BC"
        android:layout_width="83dp"
        android:layout_height="78dp"
        android:layout_marginStart="15dp"
        android:text="C"
        android:textSize="40dp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/B0"
        app:layout_constraintTop_toTopOf="@+id/B0" />

    <TextView
        android:id="@+id/Resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:text="0"
        android:textSize="70dp"
        app:layout_constraintBottom_toTopOf="@+id/Bmas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>